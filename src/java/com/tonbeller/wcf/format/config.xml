<?xml version="1.0" encoding="iso-8859-1"?>

<formatters>
  <formatter name="boolean" handler="com.tonbeller.wcf.format.BooleanHandler"/>
  
  <formatter name="string" handler="com.tonbeller.wcf.format.StringHandler"/>

  <formatter name="reqstr" handler="com.tonbeller.wcf.format.RequiredStringHandler" errorMessage="please fill in this field">
    <locale language="de" errorMessage="Bitte füllen Sie dieses Feld aus"/>
  </formatter>

  <formatter name="date" handler="com.tonbeller.wcf.format.DateHandler" pattern="MM/dd/yyyy" errorMessage="{0} is not a valid date, expected mm/dd/yyyy">
    <locale language="de" pattern="dd.MM.yyyy" errorMessage="{0} ist kein gültiges Datum, erwartet wurde tt.mm.jjjj"/>
  </formatter>

  <formatter name="dateTime" handler="com.tonbeller.wcf.format.DateHandler" pattern="MM/dd/yyyy HH:mm:ss" errorMessage="{0} is not a valid date/time, expected mm/dd/yyyy hh:mm:ss">
    <locale language="de" pattern="dd.MM.yyyy HH:mm:ss" errorMessage="{0} ist kein gültiges Datum/Zeit, erwartet wurde tt.mm.jjjj hh:mm:ss"/>
  </formatter>

  <formatter name="int" handler="com.tonbeller.wcf.format.IntegerHandler" pattern="0" errorMessage="{0} is not a valid integer">
    <locale language="de" pattern="0" errorMessage="{0} ist keine gültige Ganzzahl"/>
  </formatter>

  <formatter name="posint" minValue="1" handler="com.tonbeller.wcf.format.IntegerHandler" pattern="0" errorMessage="{0} is not a positive integer">
    <locale language="de" minValue="1" pattern="0" errorMessage="{0} ist keine positive Ganzzahl"/>
  </formatter>

  <formatter name="double" handler="com.tonbeller.wcf.format.DoubleHandler" pattern="#,##0.00" errorMessage="{0} is not a valid decimal number">
    <locale language="de" pattern="#,##0.00" errorMessage="{0} ist keine gültige Dezimalzahl"/>
  </formatter>

  <formatter name="email" handler="com.tonbeller.wcf.format.RegexHandler" pattern=".+@.+\..+" errorMessage="{0} is not a valid email address">
    <locale language="de" pattern=".+@.+\..+" errorMessage="{0} ist keine gültige email Adresse"/>
  </formatter>

</formatters>
